            "smt": 2,
            "options": [
                "cpu"
            ]
        },
        "task_pre_exec": [
                            "source /global/common/software/sobs/perlmutter/conda_base/etc/profile.d/conda.sh",
                            "conda activate /pscratch/sd/i/iparask/envs/soconda_test"
        ]
